<?xml version="1.0" encoding="utf-8"?>

<!-- http://tech.taskrabbit.com/blog/2014/11/07/android-custom-progress-view/ -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:innerRadiusRatio="2.6"
            android:shape="ring"
            android:thickness="13dp"
            android:useLevel="false">
            <solid android:color="@color/secondary_text" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:innerRadiusRatio="2.6"
            android:shape="ring"
            android:thickness="13sp"
            android:useLevel="true">
            <gradient
                android:centerColor="@color/primary"
                android:endColor="@color/primary"
                android:startColor="#f33d21"
                android:type="sweep" />
        </shape>
    </item>
</layer-list>